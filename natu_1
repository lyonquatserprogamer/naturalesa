import discord
from discord.ext import commands
import requests
import random

intents = discord.Intents.default()
intents.messages = True
bot = commands.Bot(command_prefix='/', intents=intents)

positive_messages = [
    "Â¡Hola! Â¿SabÃ­as que reciclar ayuda a cuidar nuestro planeta? ğŸŒ",
    "Recuerda apagar las luces cuando no las necesitas para ahorrar energÃ­a. ğŸ’¡",
    "Cada pequeÃ±o gesto cuenta. Â¡Hagamos juntos del mundo un lugar mejor! ğŸŒ±",
    "El reciclaje es como un superpoder para cuidar la Tierra. ğŸ’š",
]

environment_challenges = [
    "Hoy, intenta reducir el uso de plÃ¡stico. Usa botellas reutilizables y bolsas de tela. ğŸŒ¿",
    "Â¿Te animas a plantar un Ã¡rbol en tu comunidad? ğŸŒ³",
    "Investiga sobre el compostaje y comienza tu propio pequeÃ±o compost en casa. ğŸ‚",
    "Haz un dibujo o poema sobre la naturaleza y compÃ¡rtelo con tus amigos. ğŸ¨",
]

@bot.event
async def on_ready():
    print(f'Bot listo como {bot.user}')

@bot.command()
async def motivar(ctx):
    message = random.choice(positive_messages)
    await ctx.send(message)

@bot.command()
async def desafio(ctx):
    challenge = random.choice(environment_challenges)
    await ctx.send(f"Â¡DesafÃ­o ambiental del dÃ­a! {challenge}")

@bot.command()
async def imagen(ctx):
    """Genera una imagen aleatoria relacionada con el medio ambiente."""
    image_url = get_environment_image_url()
    await ctx.send(image_url)

def get_environment_image_url():
    url = 'https://picsum.photos/800/600/?category=nature'
    return url

# Reemplaza "TOKEN_DEL_BOT" con el token real de tu bot
bot.run("TOKEN_DEL_BOT")
